{
  "protocol": "Repo Operator Protocol",
  "version": "2.0",
  "meta": {
    "author": "Casey",
    "intent": "Universal repo completion + deployment",
    "continuity_hooks": true,
    "rollback_enabled": true,
    "logging": "structured_manifest.json"
  },
  "phases": [
    {
      "name": "Analysis",
      "path": "analysis/",
      "tasks": ["Recursive scan", "Tech-stack detection", "Dependency audit"],
      "outputs": ["analysis_report.md", "repo_map.json"]
    },
    {
      "name": "Completion",
      "path": "completion/",
      "tasks": ["Missing file generation", "Upgrade hook embedding"],
      "outputs": ["completion_plan.md", "upgrade_hooks.json"]
    },
    {
      "name": "Deployment Prep",
      "path": "deployment-prep/",
      "tasks": ["Multi-stage Dockerfile", "CI/CD generation", "Env specs"],
      "outputs": ["Dockerfile", ".github/workflows/deploy.yml", "env_specs.yaml"]
    },
    {
      "name": "Validation",
      "path": "validation/",
      "tasks": ["Security scan", "Container audit", "Lint check"],
      "outputs": ["validation_report.md", "security_scan.json"]
    },
    {
      "name": "Deploy",
      "path": "deploy/",
      "tasks": ["Multi-target deploy", "Rollback script generation"],
      "outputs": ["deploy_script.sh", "rollback_instructions.md", "deployment_log.json"]
    }
  ],
  "operator_protocol": {
    "output_format": "modular_blocks",
    "explain_before_code": true,
    "safety": {
      "no_overwrite": true,
      "rollback_hooks": true,
      "manifest_logging": true
    }
  }
}
